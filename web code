    <script>
        async function callAgentAPI() {
            const websiteName = document.getElementById('websiteName').value;
            const websiteURL = document.getElementById('websiteURL').value;
            
            const responseDiv = document.getElementById('response');
            responseDiv.innerHTML = 'Analyzing...';
            
            try {
                const response = await fetch('https://api-lr.agent.ai/v1/agent/nojyvrjubhy2o4ks/webhook/fb26dcc3', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ website_name: websiteName, website_address: websiteURL })
                });
                
                const result = await response.json();
                responseDiv.innerHTML = '<pre>' + JSON.stringify(result.response, null, 2) + '</pre>';
            } catch (error) {
                responseDiv.innerHTML = 'Error: ' + error.message;
            }
        }
    </script>
